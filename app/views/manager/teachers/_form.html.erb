<%= form_for @teacher, remote: true do |form| %>
  <div class="modal-body">
    <ul class="errors"></ul>
    <div class="form-group">
      <%= form.label :name, "Teacher's Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-control", id: "input_name" %>
    </div>
    <div class="modal-footer">
      <%= link_to "Close", "#", class: "btn btn-secondary", data: {dismiss: "modal"} %>
      <%= form.submit "Create", class: "btn btn-primary"%>
    </div>
  </div>
<% end %>

